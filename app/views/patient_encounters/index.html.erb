<p id="notice"><%= notice %></p>

<h1>Patient Encounters</h1>

<table>
  <thead>
    <tr>
      <th>Encounter primary physician</th>
      <th>Encounter disposition</th>
      <th>Body temperature</th>
      <th>Blood pressure</th>
      <th>Random blood sugar</th>
      <th>Pulse</th>
      <th>Appointment</th>
      <th>Patient</th>
      <th>Service type</th>
      <th>Service location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_encounters.each do |patient_encounter| %>
      <tr>
        <td><%= patient_encounter.encounter_primary_physician %></td>
        <td><%= patient_encounter.encounter_disposition %></td>
        <td><%= patient_encounter.body_temperature %></td>
        <td><%= patient_encounter.blood_pressure %></td>
        <td><%= patient_encounter.random_blood_sugar %></td>
        <td><%= patient_encounter.pulse %></td>
        <td><%= patient_encounter.appointment %></td>
        <td><%= patient_encounter.patient %></td>
        <td><%= patient_encounter.service_type %></td>
        <td><%= patient_encounter.service_location %></td>
        <td><%= link_to 'Show', patient_encounter %></td>
        <td><%= link_to 'Edit', edit_patient_encounter_path(patient_encounter) %></td>
        <td><%= link_to 'Destroy', patient_encounter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

