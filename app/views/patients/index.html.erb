<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Ethnicity</th>
      <th>Address</th>
      <th>Telephone number</th>
      <th>Previous names</th>
      <th>National id</th>
      <th>Nhis id</th>
      <th>Date of first registration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.last_name %></td>
        <td><%= patient.first_name %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.race %></td>
        <td><%= patient.ethnicity %></td>
        <td><%= patient.address %></td>
        <td><%= patient.telephone_number %></td>
        <td><%= patient.previous_names %></td>
        <td><%= patient.national_ID %></td>
        <td><%= patient.NHIS_ID %></td>
        <td><%= patient.date_of_first_registration %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

